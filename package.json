{
  "name": "@app-ready/workspace",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "license": "ISC",
  "keywords": [
    "react",
    "workspace"
  ],
  "description": "app ready",
  "workspaces": [
    "apps\\libs",
    "apps\\mobile",
    "apps\\react-single-plugin"
  ],
  "scripts": {
    "start": "npm run dev -w=@app-ready/mobile",
    "build:dev": "npm run build:dev -w=@app-ready/mobile",
    "build:test": "npm run build:test -w=@app-ready/mobile",
    "build:prod": "npm run build:prod -w=@app-ready/mobile",
    "lint": "eslint apps/*/src/**/*.{ts,tsx} --color --fix",
    "styleLint": "stylelint apps/*/src/**/*.{scss,css} --color --fix",
    "prepare": "husky install",
    "commit": "cz",
    "update": "ncu -u -ws --root && npm i --include-workspace-root --workspaces"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@hookform/error-message": "^2.0.1",
    "ahooks": "^3.7.8",
    "antd": "^5.11.2",
    "axios": "^1.6.2",
    "classnames": "^2.3.2",
    "framer-motion": "^10.16.5",
    "lodash-es": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "*",
    "urijs": "^1.19.11",
    "zustand": "^4.4.6"
  },
  "devDependencies": {
    "@snipaste-cli/core": "^0.0.6",
    "@tsconfig/vite-react": "^2.0.1",
    "@types/lodash-es": "^4.17.11",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/urijs": "^1.19.23",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitejs/plugin-react": "^4.2.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "npm-check-updates": "^16.14.11",
    "postcss-pxtorem": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-scss": "^5.3.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-inspect": "^0.8.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}